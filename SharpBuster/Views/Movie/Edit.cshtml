@model Movie

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-1">
            <h2>Edit Movie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="Name" placeholder="Movie Title" class="form-control"/>
        </div>
        <div class="mb-3">
            <input asp-for="Director" placeholder="Director" class="form-control"/>

        </div>
        <div class="mb-3">
            <div class="bootstrap-iso">
         
              <div class="row">
                 <div class="form-group ">
                  <label class="requiredField" for="date">
                   Release Date:
                  </label>
                   <div class="input-group">
                    <div class="input-group-addon">
                    </div>
                    <input class="form-control" asp-for="ReleaseDate" id="date" placeholder="MM/DD/YYYY" type="text"/><br />
                    </div>
                 </div>
                 <div class="form-group">
             
                 </div>
             </div>
            </div>
        </div>
         <div class="mb-3">
            <input type="submit" value="Update" class="btn btn-primary"/>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>

</form>

